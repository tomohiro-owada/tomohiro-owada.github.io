<h2>Recent Posts</h2>
<ul>
{%- for post in collections.posts | reverse -%}
    <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <time datetime="{{ post.date | date('%Y-%m-%d') }}">{{ post.date | date("%Y年%m月%d日") }}</time>
    </li>
{%- endfor -%}
</ul>
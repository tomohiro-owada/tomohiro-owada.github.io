---
layout: base.njk
---

<article>
  <header>
    <h1>{{ title }}</h1>
    <time datetime="{{ page.date | date('%Y-%m-%d') }}">{{ page.date | date("%Y年%m月%d日") }}</time>
    {%- if tags -%}
    <div class="tags">
      {%- for tag in tags -%}
        {%- if tag !== "posts" -%}
          <a href="/tags/{{ tag | slug }}/" class="tag">{{ tag }}</a>
        {%- endif -%}
      {%- endfor -%}
    </div>
    {%- endif -%}
  </header>
  
  {{ content | safe }}
  
  {% include "same-month-posts.njk" %}
</article>